{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["es2020"],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["./src"]
}

